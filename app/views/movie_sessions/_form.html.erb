<%= form_for @movie_session, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="control-group">
    <%= f.label :theater_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.number_field :theater_id, :class => 'number_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :movie_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.number_field :movie_id, :class => 'number_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :start_time, :class => 'control-label' %>
    <div class="controls">
      <%= f.time_select :start_time, :class => 'time_select' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :end_time, :class => 'control-label' %>
    <div class="controls">
      <%= f.time_select :end_time, :class => 'time_select' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :date, :class => 'control-label' %>
    <div class="controls">
      <%= f.date_select :date, :class => 'date_select' %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                movie_sessions_path, :class => 'btn' %>
  </div>
<% end %>
